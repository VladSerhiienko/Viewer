{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake/Viewer(Windows/VS2017)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G",
                "\"'Visual Studio 15 2017 Win64'\"",
                "-B${workspaceFolder}/build_windows_amd64",
                "-H${workspaceFolder}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "CMake/Viewer",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-H.", "-Bbuild_linux_x86-64"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Make/Viewer",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/build_linux_x86-64"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [ "CMake/Viewer"]
        }
    ]
}