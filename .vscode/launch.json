    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Viewer (Clang)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build_linux_x86_64_clang/Viewer",
            "args": [
                "--assets", "\"../assets/**\"",
                "--scene", "/home/user/vserhiienko/models/rainier-ak-3d.fbxp",
                // "--scene", "/home/user/vserhiienko/models/warmonger_sword.fbxp",
                // "--scene", "/home/user/vserhiienko/models/dreamsong.fbxp",
                // "--scene", "/home/user/vserhiienko/models/zis-101a-sport-1938.fbxp",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/build_linux_x86_64_clang",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Make/Viewer(Linux/Makefile)"
        },
